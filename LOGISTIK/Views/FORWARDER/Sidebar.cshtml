                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/User/Index" class="nav-link active" style="background-color: #3e8979">
                        <i class="bi bi-people-fill nav-icon"></i>
                        <p>
                            Account User
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
}

