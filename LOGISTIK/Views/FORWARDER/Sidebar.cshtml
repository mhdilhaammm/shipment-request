@if (ViewBag.role == 1)
{
    <!-- Brand Logo -->
    <a href="/FORWARDER/Dashboard" class="brand-link">
        <img src="~/asset/docs/assets/img/Infineon.png" alt="navbar brand" class="brand-image navbar-brand" style="opacity: .8">
        <span class="brand-text font-weight-light">LOGISTIK</span>
